{% extends "base_ecole.html.twig" %}
        {% block content %}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">

</head>
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center">Liste des clubs</h1>
                        <!-- recherche-->
                         <div class="container">
                             <input class="form-control mb-4" id="tableSearch" type="text"
                                    placeholder="Rechercher...">
                             <!--recherche-->

                            <table class="table table-bordered" >
                            <thead>

                            <!--    <div class="sidebar-search">
                                  <div class="input-group custom-search-form">
                                      <input type="text" id="search" class="form-control" placeholder="Rechercher">
                                  </div>-->


                                  <tr>
                                <th> {{knp_pagination_sortable(Clubs,'id','c.id')}} </th>
                                <th> {{knp_pagination_sortable(Clubs,'nom','c.nom')}}</th>
                                <th> {{knp_pagination_sortable(Clubs,'organisation','c.organization')}} </th>
                                 <th> {{knp_pagination_sortable(Clubs,'année création','c.anneeCreation')}}</th>
                                <th> Suppression </th>
                                <th> Modification </th>

                            </tr>

                            </thead>

                            <tbody id="myTable">
                            {% for c in Clubs %}
                                <tr class="table-danger" >
                                <td> {{c.id}}</td>
                                <td> {{c.nom}} </td>
                                <td> {{c.organization}}  </td>
                                <td> {{ c.anneeCreation | date('d-m-Y') }} </td>
                                <td><a class="btn btn-danger" href="{{ path("saharsupprimerClubs",{'id':c.id}) }}">supprimer</a></td>
                                <td><a class="btn btn-danger" href="{{ path("saharmodifierClubs",{'id':c.id}) }}">modifier</a></td>
                            </tr>
                            {% endfor %}

                            <!--NB-->
                            <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
                            <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
                            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
                            <script src=" https://code.jquery.com/jquery-3.3.1.js"></script>
                            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

                            <script>

                                $(document).ready(function(){
                                    $("#tableSearch").on("keyup", function() {
                                        var value = $(this).val().toLowerCase();
                                        $("#myTable tr").filter(function() {
                                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                        });
                                    });
                                });
                            </script>
                            <!--NB-->
                            </tbody>
                        </table>

                        {# display navigation #}
                        <div class="navigation text-center">
                            {{ knp_pagination_render(Clubs) }}
                        </div>
                    </div>
                </div>
            </div>
            </div>
            </div>

        </html>
        {% endblock %}


