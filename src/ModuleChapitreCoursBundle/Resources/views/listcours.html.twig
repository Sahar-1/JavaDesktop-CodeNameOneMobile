{% extends 'base_ecole.html.twig' %}
{% block content %}

    <div class="page-header">
        <a style="text-decoration: none;" href="" ><h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white mr-2">
                  <i class="mdi mdi-book"></i>
                </span> Mes cours </h3> </a>
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                        </li>
            </ul>
        </nav>
    </div>



    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
                    <div class="card-body">

                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>
                                    <center>Chapitre</center>
                                </th>
                                <th>
                                    <center>Description</center>
                                </th>
                                <th>
                                    <center>Consulter</center>
                                </th>
                                <th>
                                    <center>Supprimer</center>
                                </th>
                            </tr>
                            </thead>
                    <tbody>
                    {% for cour in cours %}
                    <tr>
                        <td id="nomChapitre">{{ cour.chapitre }}</td>
                        <td>{{ cour.description }}
                        </td>
                        <td>
                            <center>
                                <a class="nav-link" href="../cours/{{ cour.id }}.pdf">
                                    <i class="mdi mdi-eye menu-icon"></i>
                                </a>
                            </center>
                        </td>
                        <td>
                            <center>
                                <a class="nav-link" href="/cours/{{ cour.id }}/delete">
                                    <i class="mdi mdi-delete menu-icon"></i>
                                </a>
                            </center>
                        </td>
                    </tr >
                  {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>


{% endblock %}
{% block javascript %}
    <script>
        $("#addChapitre").hide();
        $("#editChapitre").hide();

        function edit(id) {
            $("#idChapitre").val(id);
            $("#mnom").val($("#nomChapitre" + id).html());
            $('html, body').animate({scrollTop: 0}, 'fast');
            $("#editChapitre").show();
            $("#addChapitre").hide();
        }
    </script>
    {% endblock %}