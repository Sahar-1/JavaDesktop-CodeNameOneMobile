{% extends 'base_ecole.html.twig' %}
{% block content %}

    <div class="page-header">
        <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white mr-2">
                  <i class="mdi mdi-book"></i>
                </span> Ajouter un cours </h3>
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">

                </li>
            </ul>
        </nav>
    </div>


    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
           {% if error == 'error' %} <div class="card-header">
            <h1 class="error-page" style="color: red;" > le fichier doit Ãªtre sous format ' PDF ' </h1>
            </div>     {% endif %}
            <div class="card-body">


                <form name="modulechapitrecoursbundle_cours" method="post" enctype="multipart/form-data">


                {{ form_widget(f.description, { 'attr': {'class': 'form-control mb-2 mr-sm-2',  'placeholder' : 'Description du cours ...'} }) }}
                {{ form_widget(f.coursName, { 'attr': {'class': 'form-control mb-2 mr-sm-2' , 'placeholder' : 'Nom du cours ...'} }) }}
                {{ form_widget(f.professeur, { 'attr': {'class': 'form-control mb-2 mr-sm-2' } }) }}
                {{ form_widget(f.chapitre, { 'attr': {'class': 'form-control mb-2 mr-sm-2'  } }) }}
<div class="input-group col-xs-12">
                    <input type="file" class="form-control mb-2 mr-sm-2" name="pdf" id="pdf" placeholder="Pdf du cours">
                    <span class="input-group-append">
                            <input type="submit"  class="file-upload-browse btn btn-gradient-primary" value="Ajouter"></submit>
                          </span>
                </div> <br>


                {{ form_end(f) }}

            </div>
        </div>
    </div>



{% endblock %}
