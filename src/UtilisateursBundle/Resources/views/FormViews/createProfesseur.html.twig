{% extends 'base_ecole.html.twig' %}
{% block content %}
    {{ form_start(form) }}






    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">ajouter professeur</h4>
                <form class="forms-sample"  >
                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        {{form_widget(form.username,{ 'attr' : { 'class' : 'form-control form-control-lg ' } })}}                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">email</label>
                        {{form_widget(form.email,{ 'attr' : { 'class' : 'form-control form-control-lg ' } })}}
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">password</label>
                        {{form_widget(form.plainPassword.first,{ 'attr' : { 'class' : 'form-control form-control-lg ' }})}}
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">password</label>
                        {{form_widget(form.plainPassword.second,{ 'attr' : { 'class' : 'form-control form-control-lg ' }})}}
                    </div>


                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="form-group">
                        <label for="exampleInputName1">User</label>

                        {{form_widget(form.User,{ 'attr' : { 'class' : 'form-control' } })}}
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">User</label>

                        {{form_widget(form.roles,{ 'attr' : { 'class' : 'form-control' } })}}
                    </div>

                    {% endif %}
                    <div class="form-group">
                        <label for="exampleInputName1">matiere</label>

                        {{form_widget(form.matiere,{ 'attr' : { 'class' : 'form-control' } })}}
                    </div>

                    {{ form_end(form) }}







                </form>
            </div>
        </div>
    </div>



{% endblock %}